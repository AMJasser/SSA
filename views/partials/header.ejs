    <body>
        <header>
            <h1><img src="/SSA.png" alt="logo" /></h1>
            <nav>
                <a href="/">HOME</a>
                <a href="/about">ABOUT</a>
                <a href="/members">MEMBERSHIP</a>
                <a href="/events">EVENTS</a>
                <% if (typeof user === 'object' && user.isAdmin === true) { %>
                    <a href="/manage">MANAGE</a>
                <% } %>
                <a href="/contact">CONTACT</a>
                <% if (!(typeof user === 'object')) { %>
                    <a href="/login">LOGIN</a>
                <% } else { %>
                    <a href="/logout">LOGOUT</a>
                <% } %>
                <a id="menu-icon" onclick="rotateIcon(this)">
                    <div class="bar1"></div>
                    <div class="bar2"></div>
                    <div class="bar3"></div>
                </a>
            </nav>
        </header>
        <div id="shrink-header">
            <a href="/">HOME</a>
            <a href="/about">ABOUT</a>
            <a href="/members">MEMBERSHIP</a>
            <a href="/events">EVENTS</a>
            <% if (typeof user === 'object' && user.isAdmin === true) { %>
                <a href="/manage">MANAGE</a>
            <% } %>
            <a href="/contact">CONTACT</a>
            <% if (!(typeof user === 'object')) { %>
                <a href="/login">LOGIN</a>
            <% } else { %>
                <a href="/logout">LOGOUT</a>
            <% } %>
        </div>
        <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.transform='translateY(-62px)';">&times;</span>
        </div>
        <script>
            function flash(msg) {
                let alertEl = document.querySelector(".alert");
                alertEl.innerHTML = `<span class="closebtn" onclick="this.parentElement.style.transform='translateY(-62px)';">Ã—</span>\n ${msg}\n`;
                alertEl.style.transform = "translateY(0)";
            }

            window.onload = function() {
                <% if (typeof msg === "string") { %>
                    flash("<%= msg %>");
                <% } %>
            }
        </script>